<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Talleer._2._0.GridLayou"
             Title="GridLayou">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Background="Red" />
        <Border Grid.Row="0" Grid.Column="1" Background="Blue" />
        <Border Grid.Row="1" Grid.Column="0" Background="Green" />
        <Border Grid.Row="1" Grid.Column="1" Background="Yellow" />
        <Button
            Grid.Column="1"
            Grid.Row="1"
         x:Name="IrStackBTN"
         Text="Ir a StackLayout" 
         SemanticProperties.Hint="Redirecciona a StackLayout"
         Clicked="IrStack"
    />
    </Grid>
</ContentPage>